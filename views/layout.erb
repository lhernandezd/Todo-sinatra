    </ul>
  </div>
  <% end %>
  </nav>
  <div class="container">
    <div class="row">
      <div class="col-<%= @switch == 1 ? "4" : "12" %> mt-4">
        <%= yield %>
      </div>
    </div>
  </div>
</body>